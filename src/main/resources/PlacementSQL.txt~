Drop schema placement;
Create schema placement;
Use placement;

Create Table User
(
   	UserId   varchar(15) primary key,
   	Password varchar(100),
	OrgId int,
   	UserType int, 
	LastLogin datetime,
	IsActive bit,
   	DateCreated date,
   	DateUpdated date, 
   	CreatedBy	varchar(15),
   	CreatedOn	datetime,
   	ModifiedBy	varchar(15),
   	ModifiedOn	datetime  
);

create Table ConfigInfo
(
 
   	OrgId int not null AUTO_INCREMENT,   
   	OrgName  varchar(50),      
   	AddressLine1 varchar(50),   
   	AddressLine2 varchar(50),   
   	City varchar(50),   
   	StateLocated varchar(50),   
   	Pin varchar(6),   
   	SearchRecPerPage  int, 
   	ReportRecPerPage int,
   	ExportRecPerPage int,
   	MaxPlacementOffers  int,
   	NotificationMailId varchar(50),
        ResumeUploadFolder varchar(50),
   	CreatedBy   varchar(15),
	CreatedOn   datetime,
	ModifiedBy  varchar(15),
	ModifiedOn  datetime, 
   	Primary key(Orgid)
);

Create Table Candidate
(
   	Cuid int not null auto_increment primary key,
	CandidateId varchar(15),
	CandidateType	int,
	OrgId		int,
	FirstName 	varchar(50),
	LastName	varchar(50),
	FathersName	varchar(50),
	MothersName	varchar(50),
	Gender		int,
	DateOfBirth	date, 
   	CourseId	int,
	StreamId	int,
	PassingYear	int, 
	CreatedBy	varchar(15),
	CreatedOn	datetime,
	ModifiedBy	varchar(15),
	ModifiedOn	datetime,
	Unique (CandidateId, OrgId),  
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE 
);

create Table CandidateContact
(
	CcId int not null AUTO_INCREMENT primary key,
	Cuid int not null,	
	OrgId		int,
	PrimaryEmail		varchar(100),
	SecondaryEmail		varchar(100),
	PrimaryCellNo		varchar(15),
	SecondaryCellNo		varchar(15),
	PrimaryLandLineNo	varchar(15),
	SecondaryLandLineNo	varchar(15), 
	Foreign Key (Cuid) references Candidate(Cuid) ON  DELETE CASCADE,
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE  
);

Create Table CandidateAddress
( 	
	CaId int not null AUTO_INCREMENT,
 	Cuid int not null,
	OrgId		int,
	AddressLine1	varchar(50),
	AddressLine2	varchar(50),
	City		varchar(30),
	ResidentState	varchar(30),
	Pin		varchar(6),
	Primary Key(CaId),
	Foreign Key (Cuid) references Candidate(Cuid) ON  DELETE CASCADE,
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE  
);

Create Table CandidateQualification
(
	CqId int not null AUTO_INCREMENT primary key , 
	Cuid int not null, 
	OrgId		int,
	QualRollNo	varchar(15),
	CourseId	int,
	StreamId	int,
	University	varchar(50),
	MaxMarks	int,
	ObtdMarks	int,
	PercentMarks	decimal(5,2),
	PassingYear	int,
	LiveKT		int,
	PastKT		int,
	KTSubjects	varchar(200),  
	Foreign Key (Cuid) references Candidate(Cuid) ON  DELETE CASCADE,
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE 	
);

Create Table CandidateSemester
(
	CsId int not null AUTO_INCREMENT primary key,
	Cuid int not null,
	OrgId		int,
	CourseId	int,
	SemesterId	int,
	MaxMarks	int,
	MarksObtd	int,
	PercentMarks	decimal(5,2),  
	CandidateId	varchar(15),
	QualRollNo	varchar(15),
	Foreign Key (Cuid) references Candidate(Cuid) ON  DELETE CASCADE,
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE 
);
Create Table CandidatePlacement
(  
	CpId int not null primary key,
	Cuid int, 
	OrgId int, 
	CompanyId int,
  	DateOfPlacement date,
  	DateOfJoining date,
  	BondPeriod int,
  	SalaryOffered decimal(5,2),
	CreatedBy   varchar(15),
	CreatedOn   datetime,
	ModifiedBy  varchar(15),
	ModifiedOn  datetime, 
	Foreign Key (Cuid) references Candidate(Cuid) ON DELETE CASCADE,
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE 
);

create table CandidatePlacementPref(
	Id int not null auto_increment primary key,
	OrgId int,
	Cuid int not null,
	PlacementPref int,
	Foreign Key (Cuid) references Candidate(Cuid) ON  DELETE CASCADE,
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE 
);





Create Table NonSecondaryCourseInfo
(
  	Id  int primary key,
  	Name varchar(50)  
);
Create Table NonSecondaryStreamInfo
(  
  	Id  int primary key,
  	Name varchar(50)
	 
);
Create Table CoursesStream
( 
	Id int primary key AUTO_INCREMENT,
   	CourseId  int,   
   	StreamId int,	   
   	OrgId int,
   	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE
);
Create Table Company
( 	
	CompanyId int not null primary key,
	CompanyName varchar(100), 
	CompanyType varchar(100),
	YearOfPlacement int,
	PayPackage  decimal(5,2),
	BondPeriod int, 
	OrgId int, 
	CreatedBy	varchar(15),
	CreatedOn	datetime,
	ModifiedBy	varchar(15),
	ModifiedOn	datetime, 
	Foreign Key (OrgId) references ConfigInfo(OrgId)  
);
Create Table CompanyAddress
(
	Id int not null primary key,
	CompanyId	int,
	OrgId int,
	AddressLine1	varchar(50),
	AddressLine2	varchar(50),
	City		varchar(30),
	ResidentState	varchar(30),
	Pin		varchar(6),
	Foreign Key (CompanyId) references Company(CompanyId)   
);
Create Table CompanyContact
(
	Id int not null primary key,
	Name varchar(100),
	CellNumber varchar(15),
	LandLine  varchar(15),
	EmailId	varchar(50),
	CompanyId int,
	OrgId int,
	Foreign Key (CompanyId) references Company(CompanyId)   
);
Create Table CompanyQualCriteria
( 
	Id int not null primary key,
	CourseId int,
	Percentage decimal(5,2),  
	LiveKT int, 
	PastKT int, 
	KTSubjects varchar(100),  
	CompanyId	int,
	OrgId int,
	Foreign Key (CompanyId) references Company(CompanyId)   	
);

Create Table CompanyStreamCriteria
(
	Id int not null primary key,
	StreamId	int,
	CompanyId	int,
	OrgId 		int
);


Create Table PlacementStatistics
(
	Id int not null primary key,
	StatsId int,
	OrgId int,
	PlacementYear date,
	CourseId int,
	StreamId int,
	NoOfCandidatesReg int,
	NoOfCandidatesPlaced int,
	NoOfCompaniesVisited int
); 



-- tables to be manually maintained as they are not part of current organization
Create Table SecondaryCoursesInfo
(
    Id  int not null primary key,
    Name varchar(30)
);
Create Table SecondaryStreamsInfo
(
	Id int not null primary key,
        Name varchar(30)
);

create table CandidateNotificationsLog
(
	id int primary key AUTO_INCREMENT,
	Cuid int,
	OrgId int,
	CandidatePrimaryEmailId varchar(50),
	CandidateSecondaryEmailId varchar(50),
	NotificationDate timestamp, 
	NotifierEmailId varchar(50),
	Message	varchar(200),
	Status int,
	Foreign Key (Cuid) references Candidate(Cuid) ON DELETE CASCADE,
	Foreign Key (OrgId) references ConfigInfo(OrgId) ON DELETE CASCADE	
);

